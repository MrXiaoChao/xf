<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_homepae"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_homepage"
            android:gravity="center"
            android:text="首页"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_project"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_projectflow"
            android:gravity="center"
            android:text="项目跟踪"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:drawablePadding="1dp"
            android:drawableTop="@drawable/tab_menu_mine"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/tv_menu_color"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_div"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_above="@id/ll_menu"
        android:background="#555555" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_div">
    </FrameLayout>
</RelativeLayout>