<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_heardview"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_banner"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_news"
            android:layout_width="68dp"
            android:layout_height="77dp"
            android:background="@drawable/btn_homepage"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/i_1"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="项目信息"
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_following"
            android:layout_width="68dp"
            android:layout_height="77dp"
            android:background="@drawable/btn_homepage"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/i_2"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="项目跟踪"
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_flow"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_warn"
            android:layout_width="68dp"
            android:layout_height="77dp"
            android:background="@drawable/btn_homepage"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/i_3"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="项目提醒"
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_warn"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_statement"
            android:layout_width="68dp"
            android:layout_height="77dp"
            android:background="@drawable/btn_homepage"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:background="@mipmap/i_4"
                android:scaleType="centerCrop" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:text="项目统计"
                android:textColor="#333333"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:id="@+id/view_stament"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/backgroundColor" />

</LinearLayout>